<h2>Create New Account</h2>

<!-- could also just use @user.errors.full_messages here -->
<% if flash[:errors] %>
  <p>Please correct the following errors:</p>
  <ul>
    <% flash[:errors].each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <br>

  <%= f.submit 'Sign up' %>

<% end %>
