<!DOCTYPE html>
<html>
  <head>
    <title>TunrDb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <h1>TunR Music DB</h1>

    <header>
      <nav>
        <% if @current_user.present? %>
          Welcome, <%= @current_user.name %> (<%= @current_user.id %>)
          <% if @current_user.admin? %>
            (admin)
          <% end %>
          |
          <%= link_to 'Logout', login_path, method: 'delete' %>
        <% else %>
          <%= link_to 'Login', login_path %>
          |
          <%= link_to 'Sign Up', new_user_path %>
        <% end %>

        <%# Quick login buttons - DEVELOPMENT ONLY! %>
        <% if Rails.env.development? %>
           <%= form_tag login_path do %>
             <%= hidden_field_tag :email, 'luke@ga.co' %>
             <%= hidden_field_tag :password, 'chicken'  %>
             <%= submit_tag 'Login "Luke"' %>
           <% end %>
           <%= form_tag login_path do %>
             <%= hidden_field_tag :email, 'mikki@ga.co' %>
             <%= hidden_field_tag :password, 'chicken'  %>
             <%= submit_tag 'Login "Mikki"' %>
           <% end %>
        <% end %>

      </nav>
      <hr>
    </header>


    <%= yield %>
    <footer>
      <hr>
      &copy; Corporate Sellout Productions 2020
    </footer>
  </body>
</html>
