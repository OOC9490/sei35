
<h2>
  Planet <%= @planet.name %>
</h2>

<!-- the edit URL is /planets/:id/edit -->
<a href="<%= planet_edit_path( @planet.id ) %>">Edit</a>
|
<!-- the destroy URL is /planets/:id/delete -->
<a href="<%= planet_destroy_path( @planet.id ) %>">Delete</a>

<p>
  <strong>Orbit:</strong>
  <%= @planet.orbit %> earth orbits
</p>

<p>
  <strong>Diameter:</strong>
  <%= @planet.diameter %> earth diameters
</p>

<p>
  <strong>mass:</strong>
  <%= @planet.mass %> earth masses
</p>

<p>
  <strong>Moons:</strong>
  <%= @planet.moons %>
</p>

<% if @planet.image.present? %>
  <%= image_tag @planet.image, alt: @planet.name, class: 'planet'  %>
<% end %>
